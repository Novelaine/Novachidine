{% extends 'base.html.twig' %}

{% block title %}Réservation index{% endblock %}

{% block body %}
    <h1>Liste des Réservations</h1>
    <div class="trait"></div>
    <a href="{{ path('reservation_new') }}"><button>Créer</button></a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date d'arrivée</th>
                <th>Date du départ</th>
                <th>Nombre d'animaux</th>
                <th>Type d'animaux</th>
                <th>Nombre de personnes</th>
                <th>Chambre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.dateArrivee ? reservation.dateArrivee|date('d/m/Y') : '' }}</td>
                <td>{{ reservation.dateDepart ? reservation.dateDepart|date('d/m/Y') : '' }}</td>
                <td>{{ reservation.nombreAnimaux }}</td>
                <td>{{ reservation.typeAnimaux }}</td>
                <td>{{ reservation.nombrePersonnes }}</td>
                <td>{{ reservation.chambre.typeChambre }}</td>
                
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
